extends ../layout

block content
  .container
    .row
      .col-md-3
        video(controls loop autoplay): source(src="#{movie.flash}")
      .col-md-4
        dl.dl-horizontal
          dt 电影名称
          dd= movie.title
          dt 导演
          dd= movie.doctor
          dt 国家
          dd= movie.country
          dt 语言
          dd= movie.language
          dt 上映年份
          dd= movie.year
          dt 简介
          dd.= movie.summary
